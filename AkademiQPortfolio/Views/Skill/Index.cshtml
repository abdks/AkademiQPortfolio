@model List<AkademiQPortfolio.Data.SkillTable>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Burası yetenekler sayfası</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SkillID</th>
                <th>Title</th>
                <th>Levels</th>
                <th>Test</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
@*             Döngü kurulacak*@

     

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SkillId</td>
                    <td>@item.Title</td>
                    <td>@item.Levels</td>
                    <td>@item.Test</td>
                    <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
                </tr>
            }


        </tbody>
    </table>
</div>










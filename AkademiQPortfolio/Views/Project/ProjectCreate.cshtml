@model AkademiQPortfolio.Data.ProjectsTable
@{
    ViewData["Title"] = "ProjectCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Proje Oluşturma Sayfası</h1>

@* //Form method değinilecek , name alanı değinilecek*@
<form method="post">
    <label>
        Proje Adı  @ViewBag.Test
    </label>
    <input type="text" class="form-control" name="ProjectName" />
    <label>
        Proje Başlığı
    </label>
    <input type="text" class="form-control" name="Title" />
    <label>
        Proje Resimi
    </label>
    <input type="text" class="form-control" name="Image" />
    <label>
        Proje Kategorisi
    </label>

    <select class="form-control" name="CategoryId">
@*         Kategori seçiniz buradan kaldırılsın*@
        <option value="">Kategoriyi Seçiniz</option>
        
            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.Value">@item.Text</option>
            }

    </select>
    <button type="submit" class="btn btn-success">Ekle</button>
</form>